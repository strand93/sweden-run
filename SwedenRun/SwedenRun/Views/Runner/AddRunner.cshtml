@{
  ViewBag.Title = "Add Runner - Sweden Runner";
}

@model Runner

<div class="container">
  <div class="py-5 text-center">
    <h2>Create your Runner!</h2>
    <p class="lead">Add your personal information to start your journey of running across Sweden!</p>
    <p class="small text-muted">Personal data will only be stored for the use of this application</p>
  </div>

  <div class="row g-3">
    <!--Right Section-->
    <div class="col-md-5 col-lg-4 order-md-last">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">PLACEHOLDER</span>
        <span class="text-muted">Status</span>
      </h4>
    </div>

    <!--Left Section-->
    <div class="col-md-7 col-lg-8">
      <h4 class="mb-3">Runner Information</h4>

      <form class="needs-validation" asp-controller="Home" asp-action="Index" method="post">
        <!--<form class="needs-validation" novalidate>-->
        <div class="row g-3">
          <div class="col-12">
            <label class="form-label" asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name">
          </div>

          <div class="col-12">
            <label class="form-label" asp-for="Email"></label>
            <input type="email" class="form-control" asp-for="Email">
          </div>

          <div class="col-12">
            <label class="form-label" asp-for="Age"></label>
            <select class="form-select" asp-for="Age">
              <option value="">Select</option>
              @for (int i = 0; i <= 100; i++)
              {
                <option value="@i">@i years</option>
              }
            </select>
          </div>

          <div class="col-12">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password">
          </div>

          <div class="col-12">
            <label for="confirm-password" class="form-label">Confirm password</label>
            <input type="password" class="form-control" id="confirm-password">
          </div>
        </div>
        <hr class="my-4">
        <div asp-validation-summary="All" style="color:red;"></div>

        <input class="w-100 btn btn-primary btn-lg" type="submit" value="Create Runner" />
        <!--<button class="w-100 btn btn-primary btn-lg" type="submit">Create runner</button>-->
      </form>
    </div>
  </div>
</div>
